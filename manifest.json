{
  "manifest_version": 2,
  "name": "Chess Colors",
  "description": "",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_popup": "popup.html",
    "default_title": "Chess Colors"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.lichess.org/*",
        "https://*.lichess.org/*",
        "https://*.chess.com/*"
      ],
      "js": [
        "js/jquery-3.2.1.min.js",
        "js/content.js"

      ],
      "run_at": "document_end"
    }
  ],

	"permissions": [
		"https://*.lichess.org/*",
		"https://*.chess.com/*analysis*",
		"http://*.lichess.org/*",
		"http://*.chess.com/*analysis*",
		"activeTab",
		"tabs",
		"storage",
		"debugger"
	],
  "web_accessible_resources": [
    "js/jquery-3.2.1.min.js",
    "js/socket.js",
    "js/chesscomListener.js"
  ],
  "externally_connectable": {
    "matches": ["*://*.lichess.org/*","*://*.chess.com/*", "*://localhost/*"]
  }
}
